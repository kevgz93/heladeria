@model IEnumerable<FrontEnd.Models.ProductoViewModel>

@{
    ViewBag.Title = "Index";
}

<head>

    <!-- Bootstrap core CSS -->
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="@Url.Content("~/Content/4-col-portfolio.css")" rel="stylesheet">

</head>


<!-- Page Content -->
<div class="container">

    <!-- Page Heading -->
    <h1 class="my-4">
        Catalogo de productos
    </h1>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail">
                    <img src="@Url.Content("~/Imagenes/Productos/producto" + @Html.ValueFor(modelItem => item.codigo) +".jpg")" alt="">
                    <div class="caption">
                        <h4 class="pull-right">₡ @Html.DisplayFor(modelItem => item.precio)</h4>
                        <h4>
                            <p>@Html.DisplayFor(modelItem => item.nombre)</p>
                        </h4>
                        <p>@Html.DisplayFor(modelItem => item.descripcion)</p>
                        <p>@Html.ActionLink("Detalles", "Detalles", new { id = item.codigo })</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<!-- /.container -->
<!-- Bootstrap core JavaScript -->
<script src="@Url.Content("~/Scripts/jquery-3.3.1.min.js")"></script>
<script src="@Url.Content("~/Scripts/bootstrap.bundle.min.js")"></script>